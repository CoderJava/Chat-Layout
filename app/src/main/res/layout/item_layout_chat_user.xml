<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_container_item_layout_chat_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/vertical_margin_8dp"
    android:paddingTop="@dimen/vertical_margin_8dp">

    <ImageView
        android:id="@+id/image_view_icon_user_item_layout_chat_user"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_view_icon_user_item_layout_chat_user"
        android:background="@drawable/background_chat_user"
        android:paddingBottom="@dimen/vertical_margin_8dp"
        android:paddingLeft="@dimen/horizontal_margin_8dp"
        android:paddingRight="@dimen/horizontal_margin_8dp"
        android:paddingTop="@dimen/vertical_margin_8dp">

        <TextView
            android:id="@+id/text_view_message_item_layout_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_date_time_item_layout_chat_user"
            android:text="Message"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/image_view_message_item_layout_chat_user"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_below="@+id/text_view_date_time_item_layout_chat_user" />

        <TextView
            android:id="@+id/text_view_date_time_item_layout_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="12-05-2018 16:22"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>
